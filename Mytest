import java.io.*;
import java.util.zip.*;

public class ZipXmlFile {
    public static void zipXmlFile(String xmlFilePath, String zipFilePath) throws IOException {
        File xmlFile = new File(xmlFilePath);
        long fileSize = xmlFile.length();
        long crc32Value = calculateCrc32(xmlFile);

        try (FileOutputStream fos = new FileOutputStream(zipFilePath);
             ZipOutputStream zos = new ZipOutputStream(fos);
             FileInputStream fis = new FileInputStream(xmlFilePath)) {

            // Create a ZIP entry with the correct size and CRC for the STORED method
            ZipEntry zipEntry = new ZipEntry("file.xml");
            zipEntry.setMethod(ZipEntry.STORED);
            zipEntry.setSize(fileSize);
            zipEntry.setCrc(crc32Value);
            zos.putNextEntry(zipEntry);

            // Write the XML content to the ZIP file
            byte[] buffer = new byte[1024];
            int length;
            while ((length = fis.read(buffer)) > 0) {
                zos.write(buffer, 0, length);
            }
            zos.closeEntry();
        }
    }

    // Calculate CRC32 checksum
    private static long calculateCrc32(File file) throws IOException {
        try (FileInputStream fis = new FileInputStream(file)) {
            CRC32 crc = new CRC32();
            byte[] buffer = new byte[1024];
            int length;
            while ((length = fis.read(buffer)) > 0) {
                crc.update(buffer, 0, length);
            }
            return crc.getValue();
        }
    }

    public static void main(String[] args) {
        try {
            zipXmlFile("path/to/xmlfile.xml", "path/to/outputfile.zip");
            System.out.println("ZIP file created successfully.");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
